<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="playerGoodHolderStyle">
        <item name="android:padding">5sp</item>
    </style>

    <style name="fireStyle">
        <item name="android:src">@mipmap/ic_fire</item>
        <item name="android:tag">fireImg</item>
    </style>

    <style name="waterStyle">
        <item name="android:src">@mipmap/ic_water</item>
        <item name="android:tag">waterImg</item>
    </style>

    <style name="windStyle">
        <item name="android:src">@mipmap/ic_air</item>
        <item name="android:tag">windImg</item>
    </style>

    <style name="earthStyle">
        <item name="android:src">@mipmap/ic_earth</item>
        <item name="android:tag">earthImg</item>
    </style>

    <style name="playerScoreBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80sp</item>
        <item name="android:paddingTop">15sp</item>
        <item name="android:paddingEnd">5sp</item>
        <item name="android:paddingStart">5sp</item>
        <item name="android:paddingBottom">10sp</item>
    </style>

    <style name="plusBtnStyle">
        <item name="android:layout_width">50sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:text">+</item>
    </style>

    <style name="minusBtnStyle">
        <item name="android:layout_width">50sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:text">-</item>
    </style>

    <style name="totalElementCountWrapper12Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10sp</item>
        <item name="android:layout_marginTop">7sp</item>
    </style>

    <style name="totalElementCountHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:text">Total</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="totalElementCountText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:text">@string/textPlaceHolder</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">2sp</item>
    </style>
</resources>
