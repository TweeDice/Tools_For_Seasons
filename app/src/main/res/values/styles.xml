<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="playerGoodHolderStyle">
        <item name="android:padding">5sp</item>
    </style>

    <style name="fireStyle">
        <item name="android:src">@mipmap/ic_fire</item>
        <item name="android:tag">fireImg</item>
    </style>

    <style name="waterStyle">
        <item name="android:src">@mipmap/ic_water</item>
        <item name="android:tag">waterImg</item>
    </style>

    <style name="windStyle">
        <item name="android:src">@mipmap/ic_air</item>
        <item name="android:tag">windImg</item>
    </style>

    <style name="earthStyle">
        <item name="android:src">@mipmap/ic_earth</item>
        <item name="android:tag">earthImg</item>
    </style>

    <style name="playerScoreBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">90sp</item>
        <item name="android:paddingTop">3sp</item>
        <item name="android:paddingEnd">5sp</item>
        <item name="android:paddingStart">5sp</item>
        <item name="android:paddingBottom">10sp</item>
    </style>

    <style name="plusBtnStyle">
        <item name="android:layout_width">50sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:text">+</item>
    </style>

    <style name="minusBtnStyle">
        <item name="android:layout_width">50sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:text">-</item>
    </style>

    <style name="totalElementCountWrapper12Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10sp</item>
        <item name="android:layout_marginTop">7sp</item>
    </style>

    <style name="totalElementCountHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:text">Total</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="totalElementCountText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:text">@string/textPlaceHolder</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">2sp</item>
    </style>

    <style name="bonusBtnStyle">
        <item name="android:layout_width">50sp</item>
        <item name="android:layout_height">50sp</item>
        <item name="android:layout_marginStart">10sp</item>
        <item name="android:layout_marginTop">3sp</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:text">0</item>
    </style>
    <style name="summonHolder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="scoreHolder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">5sp</item>
    </style>
    <style name="scoreBtns">
        <item name="android:layout_width">40sp</item>
        <item name="android:layout_height">50sp</item>
    </style>

    <style name="summonAmount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">1dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="scoreAmount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">1dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="summonTrackTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Summon</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="scoreTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:text">Score</item>
    </style>

    <style name="playerScoreBtnsHolder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0sp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
</resources>
